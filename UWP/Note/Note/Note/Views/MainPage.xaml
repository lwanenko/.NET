<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Note.Views.MainPage"
             NavigationPage.HasNavigationBar="False"
             NavigationPage.HasBackButton = "False" >
    <ContentPage.ToolbarItems  >
        <ToolbarItem  Text="Save" IsDestructive="True" Order="Primary" Command="{Binding SaveCommand}" />
        <ToolbarItem  Text="Back" IsDestructive="True" Order="Primary" Command="{Binding BackCommand}" />
    </ContentPage.ToolbarItems>
    <StackLayout>
        <Grid>
            
        </Grid>
         <Grid Padding="5,15">
             <Editor Text="{Binding EditorText}" />
        </Grid>
    </StackLayout>
</ContentPage>